<Window x:Class="Northbridge_SaveManagerR2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Northbridge_SaveManagerR2"
        mc:Ignorable="d"
        Title="Save Manager" Height="402.4" Width="640">
    <Grid>
        <GroupBox x:Name="ImportArea" Header="Import Saves" Height="54" VerticalAlignment="Top" Margin="0,0,-0.4,0">
            <Grid>
                <Label x:Name="ImportLabel" Content="You can import your saves here." HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Button x:Name="ImportButton" Content="Import" Margin="0,3,10.2,2.6" HorizontalAlignment="Right" Width="75"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="ExportArea" Header="Export Saves" Height="65" Margin="0,54,-0.4,0" VerticalAlignment="Top">
            <Grid>
                <Label x:Name="label" Content="You can export your saves here." HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <CheckBox x:Name="ArchiveSavesCheckbox" Content="When exporting all saves, compress them into an archive." HorizontalAlignment="Left" Margin="0,26,0,0" VerticalAlignment="Top"/>
                <xctk:SplitButton x:Name="ExportSavesButton" Content="Export" HorizontalAlignment="Right" Margin="0,1,10.2,16.4" Width="75">
                    <xctk:SplitButton.DropDownContent>
                        <Button x:Name="ExportAllButton" Content="Export All" HorizontalAlignment="Right" Width="75"/>
                    </xctk:SplitButton.DropDownContent>
                </xctk:SplitButton>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="DeletionArea" Header="Delete All Saves" Height="54" Margin="0,119,-0.4,0" VerticalAlignment="Top">
            <Grid>
                <Label x:Name="label1" Content="If you need to delete all saves (for example, the save files were corrupt), click the button." HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Button x:Name="button" Content="Delete" Margin="0,3,10.2,4.4" HorizontalAlignment="Right" Width="75"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBox" Header="Automatic Backup Settings" Height="118" VerticalAlignment="Top" Margin="0,173,-0.4,0">
            <Grid>
                <CheckBox x:Name="EnableAutomaticBackupsCheckbox" Content="Enable Automatic Backups" HorizontalAlignment="Left" Margin="4,3,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="BackupLocationTextBox" HorizontalAlignment="Left" Height="23" Margin="4,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="527"/>
                <Button x:Name="BrowseLocationButton" Content="Browse..." HorizontalAlignment="Left" Margin="536,34,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
                <CheckBox Content="Keep only the latest backup." HorizontalAlignment="Left" Margin="4,62,0,0" VerticalAlignment="Top"/>
                <CheckBox Content="Compress the backups." HorizontalAlignment="Left" Margin="4,76,0,0" VerticalAlignment="Top"/>
            </Grid>

        </GroupBox>
        <Button x:Name="ExitButton" Content="Exit" Margin="0,0,-0.4,0.4" Height="33" VerticalAlignment="Bottom"/>
        <GroupBox Header="Backup Management" HorizontalAlignment="Left" Height="46" Margin="0,291,-0.4,0" VerticalAlignment="Top" Width="634">
            <Grid>
                <Button x:Name="TestBackupsButton" Content="Test Backups" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105"/>
                <Button x:Name="RestoreButton" Content="Restore from Backup" HorizontalAlignment="Left" Margin="110,0,0,0" VerticalAlignment="Top" Width="124"/>
                <Button Content="Delete Backups" HorizontalAlignment="Left" Margin="239,0,0,0" VerticalAlignment="Top" Width="110"/>

            </Grid>
        </GroupBox>

    </Grid>
</Window>
